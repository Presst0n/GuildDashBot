@model GuildMessageViewModel

@{
    ViewData["Title"] = "Edit Message";
}


<h1>Edit Message</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">MessageId:</label>
        <div class="col-sm-10">
            <input asp-for="MessageId" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Message" class="col-sm-2 col-form-label">Message:</label>
        <div class="col-sm-10">
            @*<input asp-for="Message" class="form-control" />*@
            <textarea asp-for="Message" maxlength="2000" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" asp-route-id="@Model.MessageId">Save</button>
            <a asp-action="ManageGuildMessages" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>